<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp">

<androidx.cardview.widget.CardView
    android:id="@+id/cardview_img_movie"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_poster_movie"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_launcher_background"/>
</androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txt_title_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/cardview_img_movie"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="Harry Potter and the Philosopher's Stone" />

    <TextView
        android:id="@+id/txt_release_date_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_movie"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/cardview_img_movie"
        tools:text="Released date: 12-12-2000" />

    <TextView
        android:id="@+id/txt_language_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_release_date_movie"
        android:layout_toEndOf="@id/cardview_img_movie"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        tools:text="Original Language: Es"
        />

    <TextView
        android:id="@+id/txt_popularity_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_language_movie"
        android:layout_toEndOf="@id/cardview_img_movie"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        tools:text="Popularity: 20003 (8.32)"
        />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_popularity_movie"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_favorite_border_24"/>
</RelativeLayout>

